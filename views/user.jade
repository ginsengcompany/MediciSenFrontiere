extends index

block contenutoNav
    li.active
        a(href='/user')
            i.pe-7s-user
            p Inserisci Paziente
    li
        a(href='/informazioni')
            i.pe-7s-info
            p Informazioni Cliniche
    li
        a(href='/intervento')
            i.pe-7s-note2
            p Intervento
    li
        a(href='/fotointervento')
            i.pe-7s-camera
            p Foto Intervento
    li
        a(href='/followup')
            i.pe-7s-refresh

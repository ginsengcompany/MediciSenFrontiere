.div
    block contenuto
        .container-fluid
            h2.well Creazione Anagrafica Paziente
            // Surgey for children St. Mary Hospital Lacor
            .row
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='surgeyChildren') Surgey for children
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-hospital-o.fa(aria-hidden='true')
                            input#surgeyChildren.form-control(type='text', placeholder='Surgey for children')
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='stMaryHospital') St. Mary Hospital Lacor
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-map-marker.fa(aria-hidden='true')
                            input#stMaryHospital.form-control(type='text', placeholder='St. Mary Hospital Lacor')
            //h2.well Dati paziente:
            // Nome Cognome
            .row
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='nome') Nome
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-user.fa(aria-hidden='true')
                            input#nome.form-control(type='text', placeholder='Nome')
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='cognome') Cognome
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-user.fa(aria-hidden='true')
                            input#cognome.form-control(type='text', placeholder='Cognome')
                .col-sm-4.form-group
                    label(for='sesso') Sesso:
                    .cols-sm-10
                        select#sesso.form-control
                            option M
                            option F
            // Villaggio Distretto Contea
            .row
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='villaggio') Villaggio
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-map-marker.fa(aria-hidden='true')
                            input#villaggio.form-control(type='text', placeholder='Villaggio')
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='distretto') Distretto
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-map-marker.fa(aria-hidden='true')
                            input#distretto.form-control(type='text', placeholder='Distretto')
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='contea') Contea
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-map-marker.fa(aria-hidden='true')
                            input#contea.form-control(type='text', placeholder='Contea')
            // Madre Padre Telefono
            .row
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='madre') Madre
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-female.fa(aria-hidden='true')
                            input#madre.form-control(type='text', placeholder='Madre')
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='padre') Padre
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-male.fa(aria-hidden='true')
                            input#padre.form-control(type='text', placeholder='Padre')
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='telefono') Telefono
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-phone.fa(aria-hidden='true')
                            input#telefono.form-control(type='text', placeholder='Telefono')
            // Malaria e periodo
            .row
                .col-sm-4.form-group
                    label(for='malaria') Malaria:
                    .cols-sm-10
                        select#malaria.form-control
                            option Si
                            option No
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='inizio') Dal giorno:
                    #datetimepicker1.input-group.date
                        input#inizio.form-control(type='text')
                        span.input-group-addon
                            span.glyphicon.glyphicon-calendar
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='fine') Al giorno:
                    #datetimepicker2.input-group.date
                        input#fine.form-control(type='text')
                        span.input-group-addon
                            span.glyphicon-calendar.glyphicon
        br
        .container-fluid
            button.btn.btn-primary.pull-right(onclick='salvaDati();') Submit
block myScript
    script(src="assets/js/controllers/userController.js")
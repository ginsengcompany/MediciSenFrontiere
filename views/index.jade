    script(src='assets/js/jquery.3.2.1.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js')
    script(src='assets/js/bootstrap-datetimepicker.min.js')
    script(src='assets/js/bootstrap-checkbox-radio-switch.js')
    script(src='assets/js/bootstrap-notify.js')
    script(src='assets/js/light-bootstrap-dashboard.js?v=1.4.0')
    block myScript
        script(src="assets/js/controllers/indexController.js")
.div
    block contenuto
        .container-fluid
            h2.well Foto Intervento:
            .row
                .col-sm-6.form-group
                    .row
                        .col-sm-12.table-responsive
                            table#tabellaPazienti.table.table-striped.table-bordered(width='100%', cellspacing='0')
                                thead
                                    tr
                                        th id
                                        th Cognome
                                        th Nome
                                        th Sesso
                                        th Surgey Children
                                        th St Mary Hospital
                                        th Villaggio
                                        th Distretto
                                        th Contea
                                        th Madre
                                        th Padre
                                        th Telefono
                                        th Malaria
                                        th Malaria Inizio
                                        th Malaria Fine
                // Foto Profilo
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='myCanvas') Foto Paziente
                    .cols-sm-10
                        img#fotoProfilo.img-responsive(src='', style='width:350px; height:250px; margin: auto; display: none')
            .row
                .col-sm-4.form-group#formCartellaClinica
                    label(for='cartellaClinica') Cartella Clinica:
                    .cols-sm-10
                        select#cartellaClinica.form-control(onchange='changeSelectCartellaClinica();')
                            option(value='', selected='selected')
                .col-sm-4.form-group#formNumeroCartellaClinica
                    label(for='numeroCartellaClinica') Numero Cartella Clinica:
                    .cols-sm-10
                        select#numeroCartellaClinica.form-control(onchange='changeSelectNumeroCartellaClinica();')
                            option(value='', selected='selected')
                .col-sm-4.form-group
                    label(for='intervento') Intervento:
                    .cols-sm-10
                        select#intervento.form-control(onchange='')
                            option(value='', selected='selected')
            // Foto
            .row
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='avviaCam') Scatta Foto
                    br
                    .col-sm-10
                        video#video(onclick='snapshot(this);', width='350', height='350', controls='', autoplay='')
                    .cols-sm-10
                        a#avviaCam.btn.btn-primary(onclick='startWebcam();', type='button', href='#') Start WebCam
                        a#arrestaCam.btn.btn-danger(onclick='stopWebcam();', type='button', href='#') Stop WebCam
                        a#catturaFoto.btn.btn-success(onclick='snapshot();', type='button', href='#') Cattura Immagine
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='myCanvas') Scatto catturato
                    br
                    br
                    br
                    .cols-sm-10
                        canvas#myCanvas(width='350', height='250')
        br
        .container-fluid
            button.btn.btn-primary.pull-right(type='submit', onclick='salvaDati();') Submit

block myScript
    script(src="assets/js/controllers/fotointerventoController.js")
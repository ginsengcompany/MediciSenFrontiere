extends index

block contenutoNav
    li
        a(href='/user')
            i.pe-7s-user
            p Inserisci Paziente
    li.active
        a(href='/inserimentoNuovaCartella')
            i.pe-7s-id
            p Cartella Clinica
    li
        a(href='/informazioni')
            i.pe-7s-info
            p Informazioni Cliniche
    li
        a(href='/intervento')
            i.pe-7s-note2
            p Intervento
    li
        a(href='/fotointervento')
            i.pe-7s-camera
            p Foto Intervento
    li
        a(href='/followup')
            i.pe-7s-refresh
            p Follow Up
    li
        a(href='/dati')
            i.pe-7s-graph
            p Visualizza Dati
    li
        a(href='/database')
            i.pe-7s-back-2
            p Esporta Database

.div
    block contenuto
        .container-fluid
            h2.well Creazione Cartella Clinica e Valutazione Oggettiva
            // Cartella Clinica e Numero Cartella
            .row
                .col-sm-4.form-group
                    label(for='paziente') Seleziona Paziente:
                    .cols-sm-10
                        select#paziente.form-control(onchange='changeSelectPaziente();')
                            option(value='', selected='selected')
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='cartellaClinica') Cartella Clinica
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-folder-open-o.fa(aria-hidden='true')
                            input#cartellaClinica.form-control(type='month', placeholder='Cartella Clinica', min='2000-01-02')
                .col-sm-4.form-group
                    label.cols-sm-2.control-label(for='numeroCartella') Numero
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-sitemap.fa(aria-hidden='true')
                            input#numeroCartella.form-control(type='number', placeholder='Numero', min='0', step='1', value='0')
            // Anni Sesso Peso
            .row
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='anni') Anni
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-calendar.fa(aria-hidden='true')
                            input#anni.form-control(type='number', placeholder='Anni', min='0', max='120', step='1', value='0')
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='peso') Peso (in kg)
                    .cols-sm-10
                        .input-group
                            span.input-group-addon
                                i.fa.fa-balance-scale.fa(aria-hidden='true')
                            input#peso.form-control(type='number', placeholder='Peso', min='0', max='200', step='10', value='30')
            // Carica immagini da pc
            .row
                .col-md-6.form-group
                    label.cols-sm-2.control-label(for='caricaFoto') Carica Immagine da PC
                    input#caricaFoto.form-control(type='file', onchange='encodeImageFileAsURL(this)')
                .col-sm-5.form-group
                    label.cols-sm-2.control-label(for='scattaFoto') Scatta Foto
                    .cols-sm-10
                        a#scattaFoto.btn.btn-primary(onclick='visualizzaCamera();', target='_blank', type='button') Scatta da Camera
            //Foto
            .row#hiddenrow
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='avviaCam') Scatta Foto
                    br
                    .col-sm-10
                        video#video(onclick='snapshot(this);', width='350', height='350', controls='', autoplay='')
                    .cols-sm-10
                        a#avviaCam.btn.btn-primary(onclick='startWebcam();', type='button', href='#') Start WebCam
                        a#arrestaCam.btn.btn-danger(onclick='stopWebcam();', type='button', href='#') Stop WebCam
                        a#catturaFoto.btn.btn-success(onclick='snapshot();', type='button', href='#') Cattura Immagine
                .col-sm-6.form-group
                    label.cols-sm-2.control-label(for='myCanvas') Scatto catturato
                    br
                    br
                    br
                    .cols-sm-10
                        canvas#myCanvas(width='350', height='250')
        br
        .container-fluid
            button.btn.btn-primary.pull-right(onclick='salvaDati();') Submit
block myScript
    script(src="assets/js/controllers/inserimentoNuovaCartellaController.js")